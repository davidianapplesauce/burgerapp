<img src="./assets/mark.jpg" class="img-responsive center-block"></img>
<h1 class="text-center">Burgerazzi!</h1>


<div class="col-xs-12">

    <div class="col-sm-12">

        <br>
        <h2>Famous Burgers To Eat!</h2>

        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn btn-success" type="submit">Crush It!</button>
                </form>

            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>


    <div class="col-xs-6">
        <h3>Washed Up Burgers...</h3>
        {{#each burger}}
        {{#if this.devoured}}
        <li>
            {{this.id}}
            {{this.burger_name}}
        </li>

        {{/if}}
        {{/each}}
    </div>



    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="input">Add Your Burger</label>
                    <textarea type="text" class="form-control" name="input" placeholder="new burger name"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="submit">Action!</button>
            </form>
        </div>
        <div class="col-xs-3"></div>
    </div>